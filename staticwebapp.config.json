{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/api/*",
            "/_framework/*",
            "/css/*"
        ]
    },
    "routes": [
        {
            "route": "/.auth/login/done",
            "rewrite": "/profile",
            "statusCode": 302
        },
        {
            "route": "/api/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/admin/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/*",
            "headers": {
                "Strict-Transport-Security": "max-age=31536000; includeSubDomains"
            }
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/google",
            "statusCode": 302
        }
    },
    "platform": {
        "apiRuntime": "node:20"
    },
    "auth": {
        "identityProviders": {
            "google": {
                "registration": {
                    "clientIdSettingName": "GOOGLE_CLIENT_ID",
                    "clientSecretSettingName": "GOOGLE_CLIENT_SECRET"
                }
            }
        }
    }
}